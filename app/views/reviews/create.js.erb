$('.for_notice').find('.alert').remove();
if (<%= @review.errors.count.zero? %>) {
    $('.new_review').toggle();
    $('.form_for_review').remove();
    $('.new_review').prepend('<%= j render partial: 'reviews/form', locals: {review: @review, product: @product}  %>');
    $('.for_notice').prepend('<%= j render partial: 'reviews/success'  %>');
} else {
    $('.new_review').prepend('<%= j render partial: 'reviews/form', locals: {review: @review, product: @product}  %>');
    $('.for_notice').prepend('<%= j render partial: 'reviews/unsuccess'  %>');
}